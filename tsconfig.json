{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "lib": ["ES2017", "DOM"],
    "moduleResolution": "node",
    "module": "CommonJS",
    "declaration": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "allowJs": false
  },
  "exclude": [
    "node_modules"
  ]
}